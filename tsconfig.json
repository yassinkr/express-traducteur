{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS", 
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"]
		},
		"moduleResolution": "Node",
		"outDir": "dist",
		"importsNotUsedAsValues": "remove",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["vitest/globals"]
	},
	"include": ["src/**/*", "tools"],
	"exclude": ["node_modules"]
}
